.then(channel =>
 channel.setParent(message.guild.channels.find(channel => channel.name === "Sunucu ƒ∞statistik")));
 message.guild.createChannel(`Bot sayƒ±sƒ±: ${message.guild.members.filter(m => m.user.bot).size}`, 'voice')
.then(channel =>
 channel.setParent(message.guild.channels.find(channel => channel.name === "Sunucu ƒ∞statistik")));
